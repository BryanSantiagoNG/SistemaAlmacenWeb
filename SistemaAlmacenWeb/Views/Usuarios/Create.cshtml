@model SistemaAlmacenWeb.Models.Usuario

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom py-3">
            <h4 class="text-primary mb-0"><i class="fas fa-user-plus me-2"></i> Nuevo Usuario</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="UsuarioNombre" class="form-label fw-bold text-muted small">NOMBRE DE USUARIO</label>
                    <input asp-for="UsuarioNombre" class="form-control" placeholder="Ej. juan.perez" />
                    <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contraseña" class="form-label fw-bold text-muted small">CONTRASEÑA</label>
                    <input asp-for="Contraseña" type="password" class="form-control" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Rol" class="form-label fw-bold text-muted small">ROL / PERMISO</label>
                    <select asp-for="Rol" class="form-select">
                        <option value="Empleado">Empleado (Ventas y Catálogos)</option>
                        <option value="Administrador">Administrador (Acceso Total)</option>
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Guardar Usuario</button>
                    <a asp-action="Index" class="btn btn-light text-muted border">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}