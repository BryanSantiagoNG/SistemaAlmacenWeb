@model IEnumerable<SistemaAlmacenWeb.Models.Articulo>

@{
    ViewData["Title"] = "Inventario";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Inventario de Artículos</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo Artículo</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover border">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Producto</th>
                <th>Marca</th>
                <th>Stock</th>
                <th>P. Compra</th>
                <th>P. Venta</th>
                <th>Proveedor</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@item.CodigoInterno</strong><br />
                        <small class="text-muted">@item.CodigoBarras</small>
                    </td>
                    <td>@item.Descripcion</td>
                    <td>@item.Marca</td>
                    <td>
                        @if (item.Cantidad <= 5)
                        {
                            <span class="badge bg-danger">@item.Cantidad (Bajo)</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.Cantidad</span>
                        }
                    </td>
                    <td>@item.PrecioCompra.ToString("C2")</td>
                    <td>@item.PrecioVenta.ToString("C2")</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                    </td>
                    <td style="width: 250px;">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdArticulo" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.IdArticulo" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.IdArticulo" class="btn btn-danger btn-sm">Borrar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>