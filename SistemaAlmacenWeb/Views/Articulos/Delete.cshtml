@model SistemaAlmacenWeb.Models.Articulo

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-danger">Eliminar Artículo</h1>
<h3>¿Estás seguro de que deseas eliminar este producto?</h3>
<p class="text-warning">Esta acción no se puede deshacer.</p>

<div class="card border-danger mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-2">Marca</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Marca)</dd>

            <dt class="col-sm-2">Stock</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Cantidad)</dd>

            <dt class="col-sm-2">Proveedor</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Proveedor.Nombre)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdArticulo" />
    <input type="submit" value="Confirmar Eliminación" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>