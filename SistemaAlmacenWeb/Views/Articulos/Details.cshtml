@model SistemaAlmacenWeb.Models.Articulo

@{
    ViewData["Title"] = "Detalle Artículo";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">
                <i class="fas fa-box-open me-2"></i> @Model.Descripcion
            </h4>
            <span class="badge bg-light text-dark border">ID: @Model.IdArticulo</span>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="text-muted border-bottom pb-2 mb-3">Información General</h5>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold text-secondary">Código Interno:</div>
                        <div class="col-sm-8 text-dark">@Model.CodigoInterno</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold text-secondary">Marca:</div>
                        <div class="col-sm-8 text-dark">@Model.Marca</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold text-secondary">Stock Actual:</div>
                        <div class="col-sm-8">
                            @if (Model.Cantidad <= 5)
                            {
                                <span class="badge bg-danger-subtle text-danger border border-danger">@Model.Cantidad (Bajo)</span>
                            }
                            else
                            {
                                <span class="badge bg-success-subtle text-success border border-success">@Model.Cantidad Unidades</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold text-secondary">Precio Venta:</div>
                        <div class="col-sm-8 fs-5 text-success fw-bold">@Model.PrecioVenta.ToString("C2")</div>
                    </div>

                    <hr class="text-muted" />

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold text-secondary">Proveedor:</div>
                        <div class="col-sm-8 text-dark">
                            @(Model.Proveedor != null ? Model.Proveedor.Nombre : "No asignado")
                        </div>
                    </div>
                </div>

                <div class="col-md-4 text-center border-start">
                    <h5 class="text-muted mb-3">Código de Barras</h5>

                    @if (!string.IsNullOrEmpty(Model.CodigoBarras))
                    {
                        <div class="p-3">
                            <svg id="barcode"></svg>
                        </div>
                        <p class="mt-2 text-muted small">@Model.CodigoBarras</p>
                    }
                    else
                    {
                        <div class="alert alert-light border">Sin código</div>
                    }
                </div>
            </div>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.IdArticulo" class="btn btn-warning text-dark">
                <i class="fas fa-pen"></i> Editar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <script>
        @if (!string.IsNullOrEmpty(Model.CodigoBarras))
        {
                <text>
                JsBarcode("#barcode", "@Model.CodigoBarras", {
                    format: "CODE128",
                    lineColor: "#333", 
                    width: 2,
                    height: 60,
                    displayValue: false
                });
                </text>
        }
    </script>
}