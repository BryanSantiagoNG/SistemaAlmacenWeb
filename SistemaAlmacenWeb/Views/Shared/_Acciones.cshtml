@{
    dynamic datos = Model;
}

<div class="btn-group shadow-sm" role="group">
    <a href="/@datos.Controller/Edit/@datos.Id" class="btn btn-sm btn-light text-warning" title="Editar">
        <i class="fas fa-pen"></i>
    </a>

    <a href="/@datos.Controller/Details/@datos.Id" class="btn btn-sm btn-light text-info" title="Ver Detalles">
        <i class="fas fa-eye"></i>
    </a>

    <a href="/@datos.Controller/Delete/@datos.Id" class="btn btn-sm btn-light text-danger" title="Eliminar">
        <i class="fas fa-trash"></i>
    </a>
</div>