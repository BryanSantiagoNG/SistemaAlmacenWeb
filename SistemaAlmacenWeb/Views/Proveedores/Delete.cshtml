@model SistemaAlmacenWeb.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-danger">Eliminar Proveedor</h1>
<h3>¿Estás seguro de que deseas eliminar este registro?</h3>

@if (Model.Articulos != null && Model.Articulos.Count > 0)
{
    <div class="alert alert-warning">
        <strong>¡Advertencia!</strong> Este proveedor tiene <strong>@Model.Articulos.Count</strong> productos asociados.
        Si lo eliminas, esos productos podrían quedar sin proveedor asignado o causar un error.
    </div>
}

<div class="card border-danger mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-2">Teléfono</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdProveedor" />
    <input type="submit" value="Confirmar Eliminación" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>