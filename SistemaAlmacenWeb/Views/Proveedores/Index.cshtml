@model IEnumerable<SistemaAlmacenWeb.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Catálogo de Proveedores</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo Proveedor</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre / Razón Social</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        <a href="mailto:@item.Email">@item.Email</a>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-danger btn-sm">Borrar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>