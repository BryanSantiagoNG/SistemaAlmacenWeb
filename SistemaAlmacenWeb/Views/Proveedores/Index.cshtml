@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<SistemaAlmacenWeb.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
    var rol = HttpContextAccessor.HttpContext.Session.GetString("Rol");
}

<div class="card p-4 shadow-sm border-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0 text-dark"><i class="fas fa-truck text-info me-2"></i> Proveedores</h2>
            <small class="text-muted">Gestión de socios comerciales</small>
        </div>

        @if (rol == "Administrador")
        {
            <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus-circle me-2"></i> Nuevo Proveedor</a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr><th>Razón Social</th><th>Teléfono</th><th>Email</th><th>Dirección</th><th class="text-end" style="min-width: 150px;">Acciones</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong class="text-dark">@item.Nombre</strong></td>
                        <td>@item.Telefono</td>
                        <td><a href="mailto:@item.Email" class="text-primary text-decoration-none">@item.Email</a></td>
                        <td class="text-muted small">@item.Direccion</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                @if (rol == "Administrador")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-outline-warning"><i class="fas fa-pen"></i></a>
                                }
                                <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
                                @if (rol == "Administrador")
                                {
                                    <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>