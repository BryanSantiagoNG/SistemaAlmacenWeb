@model IEnumerable<SistemaAlmacenWeb.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0 text-uppercase text-light">
                <i class="fas fa-truck me-2"></i> Catálogo de Proveedores
            </h2>
            <small class="text-muted">Gestión de socios comerciales</small>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow">
            <i class="fas fa-plus-circle me-2"></i> Nuevo Proveedor
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Nombre / Razón Social</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Dirección</th>
                    <th class="text-end" style="min-width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong class="text-white">@Html.DisplayFor(modelItem => item.Nombre)</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Telefono))
                            {
                                <span class="text-white"><i class="fas fa-phone-alt text-muted me-1"></i> @item.Telefono</span>
                            }
                            else
                            {

                                <span class="text-muted small">--</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Email))
                            {
                                <a href="mailto:@item.Email" style="color: #4ade80; text-decoration: none;">
                                    <i class="fas fa-envelope"></i> @item.Email
                                </a>
                            }
                            else
                            {

                                <span class="text-muted small">--</span>
                            }
                        </td>
                        <td class="text-muted small">
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td class="text-end">
                            <!-- BOTONES CON FONDO BLANCO (btn-light) -->
                            <div class="btn-group shadow-sm" role="group">

                                <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-light text-warning" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-light text-info" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <!-- Bote de basura con fondo blanco e ícono rojo -->
                                <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-light text-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>