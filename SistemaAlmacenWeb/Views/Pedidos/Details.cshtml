@model SistemaAlmacenWeb.Models.Pedido
@{
    ViewData["Title"] = "Detalle Pedido";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h4 class="mb-0 text-white">
                <i class="fas fa-file-invoice me-2"></i> Pedido #@Model.IdPedido
            </h4>
            <span class="badge bg-white text-primary">@Model.Fecha.ToShortDateString()</span>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="text-muted border-bottom pb-2">Proveedor</h5>
                    <p class="fs-5 mb-0 text-dark fw-bold">
                        <i class="fas fa-truck me-2"></i> @Model.Proveedor.Nombre
                    </p>
                    <small class="text-muted">@Model.Proveedor.Email</small>
                </div>

                <div class="col-md-6 text-end">
                    <h5 class="text-muted border-bottom pb-2">Estado</h5>
                    <span class="badge bg-success-subtle text-success border border-success fs-6">@Model.Estado</span>
                </div>
            </div>

            <h5 class="mt-4 mb-3 text-secondary">Productos Recibidos</h5>

            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Artículo</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Costo Unit.</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal granTotal = 0;
                        }
                        @foreach (var item in Model.DetallePedidos)
                        {
                            var subtotal = item.Cantidad * item.PrecioUnitario;
                            granTotal += subtotal;
                            <tr>
                                <td>@item.Articulo.Descripcion</td>
                                <td class="text-center">@item.Cantidad</td>
                                <td class="text-end">@item.PrecioUnitario.ToString("C2")</td>
                                <td class="text-end fw-bold">@subtotal.ToString("C2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold text-dark">TOTAL COMPRA:</td>
                            <td class="text-end fw-bold text-success fs-5">@granTotal.ToString("C2")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver al Historial
            </a>
        </div>
    </div>
</div>