@model SistemaAlmacenWeb.Models.Cliente

@{
    ViewData["Title"] = "Perfil de Cliente";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom py-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0 text-primary fw-bold">
                        <i class="fas fa-user-circle me-2"></i> @Model.Nombre
                    </h2>
                    <span class="badge bg-light text-secondary border mt-2">ID Cliente: @Model.IdCliente</span>
                </div>
                <div class="text-end d-none d-md-block text-muted opacity-25">
                    <i class="fas fa-address-card fa-4x"></i>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="p-3 border rounded bg-light h-100">
                        <h5 class="text-dark border-bottom pb-2 mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>Información Fiscal
                        </h5>

                        <div class="mb-3">
                            <label class="text-muted small fw-bold">RFC</label>
                            <p class="text-dark fs-5 mb-0">
                                @(string.IsNullOrEmpty(Model.RFC) ? "No registrado" : Model.RFC)
                            </p>
                        </div>

                        <div>
                            <label class="text-muted small fw-bold">DIRECCIÓN</label>
                            <p class="text-dark mb-0">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                @(string.IsNullOrEmpty(Model.Direccion) ? "Sin dirección" : Model.Direccion)
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 border rounded bg-light h-100">
                        <h5 class="text-dark border-bottom pb-2 mb-3">
                            <i class="fas fa-address-book text-success me-2"></i>Contacto
                        </h5>

                        <div class="mb-3">
                            <label class="text-muted small fw-bold">TELÉFONO</label>
                            <p class="fs-5 mb-0">
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <a href="tel:@Model.Telefono" class="text-decoration-none text-dark">
                                        <i class="fas fa-phone text-success me-2"></i>@Model.Telefono
                                    </a>
                                }
                                else
                                {

                                    <span class="text-muted">--</span>
                                }
                            </p>
                        </div>

                        <div>
                            <label class="text-muted small fw-bold">EMAIL</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email" class="text-decoration-none text-primary">
                                        <i class="fas fa-envelope me-2"></i>@Model.Email
                                    </a>
                                }
                                else
                                {

                                    <span class="text-muted">--</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h4 class="text-dark mb-3"><i class="fas fa-history text-secondary me-2"></i>Historial de Compras</h4>

                @if (Model.Facturas != null && Model.Facturas.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Folio</th>
                                    <th>Fecha</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var factura in Model.Facturas.OrderByDescending(f => f.Fecha))
                                {
                                    <tr>
                                        <td><span class="badge bg-secondary">#@factura.IdFactura</span></td>
                                        <td>@factura.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-end text-success fw-bold">$@factura.Total.ToString("N2")</td>
                                        <td class="text-end">
                                            <a asp-controller="Facturas" asp-action="Details" asp-route-id="@factura.IdFactura" class="btn btn-sm btn-outline-primary">
                                                Ver Ticket
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-light border text-center text-muted">
                        <i class="fas fa-shopping-basket fa-2x mb-2"></i>
                        <p class="mb-0">Este cliente aún no ha realizado compras.</p>
                    </div>
                }
            </div>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between p-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.IdCliente" class="btn btn-warning text-dark fw-bold">
                <i class="fas fa-pen me-2"></i> Editar Datos
            </a>
        </div>
    </div>
</div>