@model IEnumerable<SistemaAlmacenWeb.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0 text-uppercase text-light">
                <i class="fas fa-users me-2"></i> Listado de Clientes
            </h2>
            <small class="text-muted">Gestión de cartera de clientes</small>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow">
            <i class="fas fa-user-plus me-2"></i> Nuevo Cliente
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Nombre / Razón Social</th>
                    <th>RFC</th>
                    <th>Teléfono</th>
                    <th>Correo Electrónico</th>
                    <th class="text-end" style="min-width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong class="text-white">@Html.DisplayFor(modelItem => item.Nombre)</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.RFC))
                            {
                                <span class="badge bg-secondary">@item.RFC</span>
                            }
                            else
                            {
                                <span class="text-muted small">N/A</span>
                            }
                        </td>
                        <td>
                            <i class="fas fa-phone-alt text-muted me-1"></i> @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Email))
                            {
                                <a href="mailto:@item.Email" style="color: #4ade80; text-decoration: none;">
                                    <i class="fas fa-envelope"></i> @item.Email
                                </a>
                            }
                        </td>
                        <td class="text-end">
                            <!-- BOTONES CON FONDO BLANCO -->
                            <div class="btn-group shadow-sm" role="group">

                                <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-sm btn-light text-warning" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-sm btn-light text-info" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-sm btn-light text-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>