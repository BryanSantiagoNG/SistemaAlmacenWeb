@model SistemaAlmacenWeb.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<h1>Mi Perfil</h1>
<hr />

<div class="card" style="max-width: 500px;">
    <div class="card-body">
        <div class="text-center mb-4">
            <img src="https://ui-avatars.com/api/?name=@Model.UsuarioNombre&background=random" class="rounded-circle" width="100" />
            <h3>@Model.UsuarioNombre</h3>
            <span class="badge bg-info text-dark">@Model.Rol</span>
        </div>

        <dl class="row">
            <dt class="col-sm-4">ID Usuario:</dt>
            <dd class="col-sm-8">@Model.IdUsuario</dd>

            <dt class="col-sm-4">Usuario:</dt>
            <dd class="col-sm-8">@Model.UsuarioNombre</dd>

            <dt class="col-sm-4">Rol:</dt>
            <dd class="col-sm-8">@Model.Rol</dd>
        </dl>

        <div class="d-grid gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
            <a asp-controller="Acceso" asp-action="Logout" class="btn btn-danger">Cerrar Sesión</a>
        </div>
    </div>
</div>