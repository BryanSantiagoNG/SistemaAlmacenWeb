@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Acceso - ALMAXEN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .brand-title {
            color: #0d6efd;
            font-weight: 800;
            letter-spacing: 2px;
            margin-bottom: 0;
        }

        .form-control {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            padding: 12px;
        }

            .form-control:focus {
                background: white;
                border-color: #0d6efd;
                box-shadow: 0 0 0 4px rgba(13,110,253,0.1);
            }

        .btn-login {
            background-color: #0d6efd;
            color: white;
            padding: 12px;
            font-weight: 600;
            width: 100%;
            border: none;
            border-radius: 6px;
            transition: 0.2s;
        }

            .btn-login:hover {
                background-color: #0b5ed7;
                transform: translateY(-1px);
            }
    </style>
</head>
<body>
    <div class="login-card">
        <img src="~/img/logo.png" alt="Logo" width="80" class="mb-3" onerror="this.style.display='none'" />
        <h2 class="brand-title">ALMAXEN</h2>
        <p class="text-muted mb-4">Bienvenido de nuevo</p>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-start py-2 px-3 mb-3 fs-6"><i class="fa fa-exclamation-circle me-1"></i> @ViewBag.Error</div>
        }
        <form asp-action="Login" method="post">
            <div class="mb-3 text-start">
                <label class="form-label fw-bold text-secondary small">USUARIO</label>
                <input type="text" name="usuario" class="form-control" required />
            </div>
            <div class="mb-4 text-start">
                <label class="form-label fw-bold text-secondary small">CONTRASEÑA</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-login">INGRESAR</button>
        </form>
        <div class="mt-4 text-muted small">&copy; 2025 ALMAXEN System</div>
    </div>
</body>
</html>