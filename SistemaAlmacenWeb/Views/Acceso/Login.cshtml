@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ALMAXEN</title>

    <!-- Bootstrap y FontAwesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        /* PALETA DE COLORES */
        :root {
            --bg-main: #000000;
            --primary: #9f111b;
            --primary-hover: #b11623;
            --surface: #292c37;
            --text-main: #cccccc;
            --text-light: #ffffff;
        }

        body {
            background-color: var(--bg-main);
            color: var(--text-main);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .login-card {
            background-color: var(--surface);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(159, 17, 27, 0.3);
            width: 100%;
            max-width: 400px;
            text-align: center;
            border-top: 5px solid var(--primary);
        }

        .logo-img {
            max-width: 120px;
            height: auto;
            margin-bottom: 15px;
            filter: drop-shadow(0 0 5px rgba(255,255,255,0.2));
        }

        /* ESTILO MARCA */
        h1.brand-title {
            color: var(--text-light);
            font-weight: 800;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 4px;
            font-size: 2rem;
        }

        p.subtitle {
            font-size: 0.9rem;
            color: #999;
            margin-bottom: 30px;
        }

        /* INPUTS CORREGIDOS (TEXTO BLANCO) */
        .form-control {
            background-color: #1a1c24 !important;
            border: 1px solid #444;
            color: #ffffff !important; /* TEXTO BLANCO OBLIGATORIO */
            padding: 12px 15px;
            font-size: 1rem;
        }

            .form-control::placeholder {
                color: #aaaaaa !important; /* Placeholder visible */
                opacity: 1;
            }

            .form-control:focus {
                background-color: #1a1c24 !important;
                color: #ffffff !important;
                border-color: var(--primary);
                box-shadow: 0 0 8px rgba(159, 17, 27, 0.4);
            }

        .input-group-text {
            background-color: #222;
            border: 1px solid #444;
            color: var(--text-main);
        }

        /* BOTÓN ROJO */
        .btn-login {
            background-color: var(--primary);
            border: none;
            color: white;
            padding: 12px;
            font-weight: bold;
            font-size: 1.1rem;
            border-radius: 5px;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-login:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(159, 17, 27, 0.4);
            }

        /* Corrección Autocompletado Chrome */
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 30px #1a1c24 inset !important;
            -webkit-text-fill-color: white !important;
            caret-color: white;
        }

        /* CORRECCIÓN FOOTER (TEXTO VISIBLE) */
        .footer-text {
            color: #888888; /* Gris claro visible */
            font-size: 0.85rem;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <!-- LOGO -->
        <img src="~/img/logo.png" alt="Logo" class="logo-img" onerror="this.style.display='none'" />

        <!-- MARCA -->
        <h1 class="brand-title">ALMAXEN</h1>
        <p class="subtitle">Control de Inventario Inteligente</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mb-3" style="background: rgba(159,17,27,0.2); border: 1px solid #9f111b; color: #ffadad;">
                <i class="fa fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input type="text" name="usuario" class="form-control" required placeholder="Usuario" autocomplete="off" />
                </div>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    <input type="password" name="password" class="form-control" required placeholder="Contraseña" />
                </div>
            </div>

            <button type="submit" class="btn btn-login">
                INGRESAR <i class="fa fa-arrow-right ms-2"></i>
            </button>
        </form>

        <!-- FOOTER CORREGIDO -->
        <div class="mt-4">
            <span class="footer-text">&copy; 2025 ALMAXEN v0.6</span>
        </div>
    </div>

</body>
</html>