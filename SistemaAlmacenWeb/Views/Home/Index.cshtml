@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center py-4">
    <h1 class="display-4 fw-bold text-dark">Bienvenido a ALMAXEN</h1>
    <p class="text-muted fs-5">Seleccione una opción para comenzar a trabajar.</p>
</div>

<div class="row justify-content-center mb-5">
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); border-left: 5px solid #198754 !important;">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="text-uppercase text-muted fw-bold mb-1" style="font-size: 0.8rem;">
                        <i class="fas fa-globe-americas me-1"></i> API TIPO DE CAMBIO
                    </h6>
                    <h2 class="text-success fw-bold mb-0">$@ViewBag.Dolar MXN</h2>
                    <small class="text-muted">1 USD (Dólar Americano)</small>
                </div>
                <div class="text-end">
                    @if (ViewBag.ApiStatus == "Conectado")
                    {
                        <span class="badge bg-success-subtle text-success border border-success rounded-pill">
                            <i class="fas fa-wifi"></i> En línea
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger-subtle text-danger border border-danger rounded-pill">
                            <i class="fas fa-wifi-slash"></i> Offline
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="border-secondary mb-5 opacity-25" />

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-4">
                <i class="fas fa-boxes fa-3x text-primary bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4 text-dark">Artículos</h3>
                <p class="card-text text-muted">Administrar inventario.</p>
                <a asp-controller="Articulos" asp-action="Index" class="btn btn-outline-primary w-75 stretched-link">Ir a Inventario</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-4">
                <i class="fas fa-users fa-3x text-success bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4 text-dark">Clientes</h3>
                <p class="card-text text-muted">Cartera de clientes.</p>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-success w-75 stretched-link">Ver Clientes</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-4">
                <i class="fas fa-truck fa-3x text-info bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4 text-dark">Proveedores</h3>
                <p class="card-text text-muted">Gestionar socios.</p>
                <a asp-controller="Proveedores" asp-action="Index" class="btn btn-outline-info w-75 stretched-link">Ver Proveedores</a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-4">
                <i class="fas fa-cash-register fa-3x text-warning bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4 text-dark">Punto de Venta</h3>
                <p class="card-text text-muted">Realizar ventas.</p>
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-warning text-dark fw-bold w-75 stretched-link">Nueva Venta</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-4">
                <i class="fas fa-clipboard-list fa-3x text-secondary bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4 text-dark">Pedidos</h3>
                <p class="card-text text-muted">Reabastecer almacén.</p>
                <a asp-controller="Pedidos" asp-action="Index" class="btn btn-outline-secondary w-75 stretched-link">Nuevo Pedido</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-4">
                <i class="fas fa-receipt fa-3x text-danger bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4 text-dark">Historial</h3>
                <p class="card-text text-muted">Consultar facturas.</p>
                <a asp-controller="Facturas" asp-action="Index" class="btn btn-outline-danger w-75 stretched-link">Ver Facturas</a>
            </div>
        </div>
    </div>
</div>