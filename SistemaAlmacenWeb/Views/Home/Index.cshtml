@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold text-dark">Bienvenido a ALMAXEN</h1>
    <p class="text-muted fs-5">Seleccione una opción para comenzar.</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-5">
                <i class="fas fa-boxes fa-3x text-primary bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4">Artículos</h3>
                <a asp-controller="Articulos" asp-action="Index" class="btn btn-outline-primary stretched-link">Ir a Inventario</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-5">
                <i class="fas fa-users fa-3x text-success bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4">Clientes</h3>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-success stretched-link">Ver Clientes</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-5">
                <i class="fas fa-truck fa-3x text-info bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4">Proveedores</h3>
                <a asp-controller="Proveedores" asp-action="Index" class="btn btn-outline-info stretched-link">Ver Proveedores</a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-5">
                <i class="fas fa-cash-register fa-3x text-warning bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4">Punto de Venta</h3>
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-warning text-dark fw-bold stretched-link">Nueva Venta</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-5">
                <i class="fas fa-clipboard-list fa-3x text-secondary bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4">Pedidos</h3>
                <a asp-controller="Pedidos" asp-action="Index" class="btn btn-outline-secondary stretched-link">Nuevo Pedido</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 shadow-sm hover-scale">
            <div class="card-body py-5">
                <i class="fas fa-receipt fa-3x text-danger bg-light p-3 rounded-circle mb-3"></i>
                <h3 class="card-title h4">Historial</h3>
                <a asp-controller="Facturas" asp-action="Index" class="btn btn-outline-danger stretched-link">Ver Facturas</a>
            </div>
        </div>
    </div>
</div>